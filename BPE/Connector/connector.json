{
  "name": "BPE_TEST_CONNECTOR",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "${SCHEMA_REGISTRY}",
    "value.converter.enhanced.avro.schema.support": "true",
    "value.converter.ignore.default.values": "true",
    "value.converter.use.latest.version": "true", 
    "value.converter.latest.compatibility.strict": "false",
  
    "errors.tolerance": "none",
    "errors.log.enable": true,
    "errors.log.include.messages": true,
    "topics": "elasticData",
    "connection.url": "${MYSQL_HOST}",
    "connection.user": "${MYSQL_USER}",
    "connection.password": "${MYSQL_PASSWORD}",
    "table.name.format": "elasticData",
    "auto.create": "true",
    "auto.evolve": "true"
  }
}